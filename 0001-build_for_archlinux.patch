diff --git a/src/Qv2rayBase.h b/src/Qv2rayBase.h
index 30ef28a..27680a3 100644
--- a/src/Qv2rayBase.h
+++ b/src/Qv2rayBase.h
@@ -20,7 +20,7 @@
